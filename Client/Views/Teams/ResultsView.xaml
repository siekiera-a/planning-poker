<UserControl x:Class="Client.Views.Teams.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Client.Views.Teams"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource MahApps.Brushes.Accent4}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Margin="8"
                  mah:TextBoxHelper.Watermark="Choose meeting to see results" />

        <ListView Grid.Row="1" Margin="8"
                  Background="{StaticResource MahApps.Brushes.Accent3}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User" Width="150" />
                    <GridViewColumn Header="Task Details" Width="300" />
                    <GridViewColumn Header="Time" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>